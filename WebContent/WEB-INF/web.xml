<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>YA801G3</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
<!-- 連線池 -->
  <resource-ref>
    <description>DB Connection</description>
    <res-ref-name>jdbc/renterDB</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  
<!-- 小豬 -->
  <servlet>
    <servlet-name>EmpServlet</servlet-name>
    <servlet-class>back.employee.controller.EmployeeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EmpServlet</servlet-name>
    <url-pattern>/employee/employee.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LoginHandler</servlet-name>
    <servlet-class>back.employee.controller.LoginHandler</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginHandler</servlet-name>
    <url-pattern>/LoginHandler</url-pattern>
  </servlet-mapping>
  
<!-- 鈞彥 -->
  <servlet>
    <servlet-name>MemberServlet</servlet-name>
    <servlet-class>com.member.controller.MemberServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MemberServlet</servlet-name>
    <url-pattern>/member/member.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>TradeServlet</servlet-name>
    <servlet-class>com.trade.controller.TradeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TradeServlet</servlet-name>
    <url-pattern>/trade/trade.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ReportServlet</servlet-name>
    <servlet-class>com.report.controller.ReportServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ReportServlet</servlet-name>
    <url-pattern>/report/report.do</url-pattern>
  </servlet-mapping>
  
<!-- 思賢 -->
  <servlet>
    <servlet-name>QueServlet</servlet-name>
    <servlet-class>front.que.controller.QueServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>QueServlet</servlet-name>
    <url-pattern>/que/que.do</url-pattern>
  </servlet-mapping>
   <servlet>
    <servlet-name>RentServlet</servlet-name>
    <servlet-class>front.rent.controller.RentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RentServlet</servlet-name>
    <url-pattern>/rent/rent.do</url-pattern>
  </servlet-mapping>

<!-- 彥勳 -->
  <servlet>
    <servlet-name>LocServlet</servlet-name>
    <servlet-class>back.loc.controller.LocServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LocServlet</servlet-name>
    <url-pattern>/loc/loc.do</url-pattern>
  </servlet-mapping>
  
<!-- 濾器 -->
  <filter>
    <filter-name>setCharacterEncodingBack</filter-name>
    <filter-class>back.filters.SetCharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>setCharacterEncodingBack</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
<!-- 後端登入 -->
  <filter>
    <filter-name>loginFilterBack</filter-name>
    <filter-class>back.filters.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>loginFilterBack</filter-name>
    <url-pattern>/back/dashboard.jsp</url-pattern>
  </filter-mapping>
  
</web-app>
